# Environment Variables Template
# Copy this to .env and fill in your actual values

# Profile (dev for local development, prod for production)
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/lms_local
SPRING_DATASOURCE_USERNAME=your_db_username
SPRING_DATASOURCE_PASSWORD=your_db_password

# Application Settings
SERVER_PORT=9090
SPRING_JPA_SHOW_SQL=true

# For Production (Neon DB)
# SPRING_DATASOURCE_URL=jdbc:postgresql://ep-XXXXXX.us-east-1.aws.neon.tech:5432/lms_db?sslmode=require
# SPRING_DATASOURCE_USERNAME=your-neon-username
# SPRING_DATASOURCE_PASSWORD=your-neon-password